<?xml version="1.0"?>
<tests xmlns:style="style">
	<test>
		<description><![CDATA[margin shorthand]]></description>
		<css>
		<![CDATA[
			p {margin: 10px;}
			div {margin: 5px 10px;}
			span {margin: 5px 10px 3px;}
			body {margin: 2px 3px 4px 5px;}
		]]>
		</css>
		<html>
			<body style:margin-top="2"  style:margin-right="3"  style:margin-bottom="4"  style:margin-left="5">
				<p style:margin-top="10"  style:margin-right="10"  style:margin-bottom="10"  style:margin-left="10"/>
				<div style:margin-top="5"  style:margin-right="10"  style:margin-bottom="5"  style:margin-left="10"/>
				<span style:margin-top="5"  style:margin-right="10"  style:margin-bottom="3"  style:margin-left="10"/>
			</body>
		</html>
	</test>
	<test>
		<description><![CDATA[padding shorthand]]></description>
		<css>
		<![CDATA[
			p {padding: 10px;}
			div {padding: 5px 10px;}
			span {padding: 5px 10px 3px;}
			body {padding: 2px 3px 4px 5px;}
		]]>
		</css>
		<html>
			<body style:padding-top="2"  style:padding-right="3"  style:padding-bottom="4"  style:padding-left="5">
				<p style:padding-top="10"  style:padding-right="10"  style:padding-bottom="10"  style:padding-left="10"/>
				<div style:padding-top="5"  style:padding-right="10"  style:padding-bottom="5"  style:padding-left="10"/>
				<span style:padding-top="5"  style:padding-right="10"  style:padding-bottom="3"  style:padding-left="10"/>
			</body>
		</html>
	</test>
	<test>
		<description><![CDATA[font shorthand]]></description>
		<css>
		<![CDATA[
			p { font: 12px/14px sans-serif }
			span { font: 300 italic 1.3px/1.7px "FB Armada", sans-serif }
		]]>
		</css>
		<html>
			<p style:font-size="12" style:line-height="14" style:font-family="sans-serif"/>
			<span style:font-weight="300" style:font-style="italic" style:font-size="1.3" style:line-height="1.7" style:font-family="FB Armada,sans-serif"/>
		</html>
	</test>
	
</tests>